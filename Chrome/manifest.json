{
	"name": "Open Knowledge Button",
	"version": "0.1.0",
	"manifest_version": 2,
	"description": "View and contribute to the web's growing layer of open annotations via AnnotateIt, Hypothes.is, PeerLibrary, and others.",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": [
				"http://babelext.com/*"
			],
			"js": ["BabelExt.js", "extension.js"] // add others here if you like, i.e. jquery...
		}
	],
	"icons": {
		// "48": "icon48.png",
		// "128": "icon128.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"history",
		"notifications"
	],
	"web_accessible_resources": ["modules/annotateit.js"]
}
