{
	"name": "Open Knowledge Button",
	"version": "0.1.0",
	"manifest_version": 2,
	"description": "View and contribute to the web's growing layer of open knowledge via AnnotateIt, Hypothes.is, Knownodes, PeerLibrary, and others.",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js": ["BabelExt.js", "modules/annotateit/jquery-1.10.2.min.js", "modules/annotateit/annotator-full.min.js", "modules/annotateit/annotateit.js", "extension.js"],
			"css": ["modules/annotateit/annotator.min.css"]
		}
	],
    "options_page": "options/options.html",
	"icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"history",
		"notifications"
	]
}
